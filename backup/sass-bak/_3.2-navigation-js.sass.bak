// navigation original
.navbar-default
  border-color: transparent
  background-color: $mycolor-4
  /* background-image: url(  site.data.template.image.background  ) */


.navbar-default .navbar-brand

  /* font-family: "Kaushan Script","Helvetica Neue",Helvetica,Arial,cursive */
  font-family: $myfont-brand
  color: $mycolor-1
/* border: solid 2px
    padding: 1px */


.navbar-default .navbar-brand:hover,
.navbar-default .navbar-brand:focus,
.navbar-default .navbar-brand:active,
.navbar-default .navbar-brand.active
  color: $mycolor-2


.navbar-default .navbar-collapse
  border-color: $mycolor-6


.navbar-default .navbar-toggle
  border-color: $mycolor-1
  background-color: $mycolor-1


.navbar-default .navbar-toggle .icon-bar
  background-color: $mycolor-2


.navbar-default .navbar-toggle:hover,
.navbar-default .navbar-toggle:focus
  background-color: $mycolor-1


.navbar-default .nav li a
  text-transform: uppercase

  font-family: $mycolor-1
  font-weight: 400
  letter-spacing: 1px
  color: $mycolor-2
  -webkit-transition: all ease .35s
  -moz-transition: all ease .35s
  transition: all ease .35s


.navbar-default .nav li a:hover,
.navbar-default .nav li a:focus
  outline: 0
  color: $mycolor-1


.navbar-default .navbar-nav>.active>a
  border-radius: 0
  color: $mycolor-2
  background-color: $mycolor-1


.navbar-default .navbar-nav>.active>a:hover,
.navbar-default .navbar-nav>.active>a:focus
  color: $mycolor-2
  background-color: $mycolor-3


@media(min-width:$media-min-width)
  .navbar-default
    padding: 25px 0
    border: 0
    background-color: transparent
    -webkit-transition: padding .3s
    -moz-transition: padding .3s
    transition: padding .3s


  .navbar-default .navbar-brand
    font-size: 2em
    -webkit-transition: all .3s
    -moz-transition: all .3s
    transition: all .3s


  .navbar-default .navbar-nav>.active>a
    border-radius: 3px


  .navbar-default.navbar-shrink
    padding: 10px 0
    background-color: $mycolor-4


  .navbar-default.navbar-shrink .navbar-brand
    font-size: 1.5em
