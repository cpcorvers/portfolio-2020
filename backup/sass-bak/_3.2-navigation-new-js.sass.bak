// navigation-rewritten
.menu
  background-color: $mycolor-4
  // border-color: $mycolor-6
  color: $mycolor-2
  font:
    family: $myfont-head
    weight: 400
  letter-spacing: 1px
  text-transform: uppercase
  transition: all ease .35s
  -moz-transition: all ease .35s
  -webkit-transition: all ease .35s

.menu-item
  

  &:hover
    color: $mycolor-1

.menu-title
    font-family: $myfont-brand

#menu-links
  display: block

.menu-icon
  background-color: $mycolor-1
  color: $mycolor-4
  // height: $menu-height
  // width: $menu-width
  border:
    radius: 2px
  padding: 5px
  font-size: 1.5rem
