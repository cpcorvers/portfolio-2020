<!-- default.html -->
<!doctype html>
<html class="window-container">
	{% include head.html %}
	<body class="grid-container">
		<header class="grid-cells">
			<!-- <div class="grid-cells cellA2"> -->
			<div class="cellA2">
				<a href="{{ site.url }}" class="brand"> {{ site.title }} </a>
			<!-- </div>
			<div class="grid-cells cellA1"> -->
					<!-- {% include navigation.html %}
			</div> -->
			<!-- <nav class="grid-cells cellA1">
					{% include navigation.html %}
			</nav> -->
			<!-- <div class="grid-cells cellA2">
				<a href="{{ site.url }}" class="brand"> {{ site.title }} </a> -->
			<!-- </div> -->

			<div class="drop-menu">
				<input name="toggle" type="checkbox" />
				<div class="drop-menu-content">
					{% for item in site.data.navigation %}
					<a href="{{ item.link }}" {% if page.url == item.link %} class="drop-menu-current" {% else %} class="drop-menu-item" {% endif %}>{{ item.name }}</a>
					{% endfor %}
				</div>
			</div>
	</div>
		</header>
		<main class="grid-cells cellB ">
					{{ content }}
		</main>
		<footer class="grid-cells cellC">
			{% include footer.html %}
		</footer>
	</body>
</html>
